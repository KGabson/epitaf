<UserControl
    x:Class="MyLiveMesh.View.MediaPlayerPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MyLiveMesh.View"
    xmlns:liquidPopup="clr-namespace:Liquid;assembly=Liquid.Popup"
	mc:Ignorable="d"
    d:DesignWidth="640" d:DesignHeight="480">

    <Grid Width="1280" Height="600">
        <liquidPopup:Dialog 
            x:Name="itemViewerPopup" 
            Width="550" 
            Height="330" 
            Buttons="None" 
            Title="VideoViewer" 
            IsResizable="True"
            Closed="itemViewerPopup_Closed">
            
            <views:MediaPlayer x:Name="MediaPlayer" />
            
        </liquidPopup:Dialog>
    </Grid>
</UserControl>
