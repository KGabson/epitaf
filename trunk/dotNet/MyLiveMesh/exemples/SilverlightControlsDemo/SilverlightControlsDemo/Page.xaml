                                    </liquidMenu:Menu>
                                </liquidMenu:MainMenuItem>
                                <liquidMenu:MainMenuItem Text="Insert">
                                    <liquidMenu:Menu>
                                        <liquidMenu:MenuItem ID="numberedList" Icon="images/numbers.png" Text="Numbered List" />
                                        <liquidMenu:MenuItem ID="bulletedList" Icon="images/bullets.png" Text="Bulleted List" />
                                    </liquidMenu:Menu>
                                </liquidMenu:MainMenuItem>
                                <liquidMenu:MainMenuItem Text="Help" />
                            </liquidMenu:MainMenu.Items>
                        </liquidMenu:MainMenu>
                    </Canvas>
                </Grid>
            </liquidPopup:Dialog>
            <liquidPopup:Dialog x:Name="fieldsetPopup" Width="300" Height="330" Buttons="Close" Title="FieldSet Control: Your Information" IsResizable="True" Minimizing="Dialog_Minimizing" Minimized="Dialog_Minimized" Restoring="Dialog_Restoring">
                <ScrollViewer Background="#ffffff">
                    <StackPanel Orientation="Vertical" Width="Auto">
                        <liquidTreeView:FieldSet x:Name="skills" Width="174" HorizontalAlignment="Left" IsExpanded="True" Text="Your Skills">
                            <StackPanel Orientation="Vertical">
                                <CheckBox x:Name="aiprogrammer" Margin="0 2 0 2" Content="A.I. Programmer" TabIndex="4" />
                                <CheckBox x:Name="graphicsdesigner" Margin="0 2 0 2" Content="Graphics Designer" TabIndex="5" />
                                <CheckBox x:Name="systemsengineer" Margin="0 2 0 2" Content="Systems Engineer" TabIndex="6" />
                                <CheckBox x:Name="tester" Margin="0 2 0 2" Content="Tester" TabIndex="7" />
                                <CheckBox x:Name="webdeveloper" Margin="0 2 0 2" Content="Web Developer" TabIndex="8" />
                            </StackPanel>
                        </liquidTreeView:FieldSet>
                        <liquidTreeView:FieldSet x:Name="qualifications" Width="174" HorizontalAlignment="Left" IsExpanded="False" Text="Microsoft Qualifications">
                            <StackPanel Orientation="Vertical">
                                <CheckBox x:Name="mcp" Margin="0 2 0 2" Content="MCP" TabIndex="10"/>
                                <CheckBox x:Name="mvp" Margin="0 2 0 2" Content="MVP" TabIndex="11"/>
                                <CheckBox x:Name="mcad" Margin="0 2 0 2" Content="MCAD" TabIndex="12"/>
                                <CheckBox x:Name="mcsd" Margin="0 2 0 2" Content="MCSD" TabIndex="13"/>
                                <CheckBox x:Name="otherQualification" Margin="0 2 0 2" Content="Other" TabIndex="14"/>
                            </StackPanel>
                        </liquidTreeView:FieldSet>
                        <liquidTreeView:FieldSet x:Name="interests" Width="174" HorizontalAlignment="Left" IsExpanded="False" Text="Your Interests">
                            <StackPanel Orientation="Vertical">
                                <CheckBox x:Name="cinema" Margin="0 2 0 2" Content="Cinema" TabIndex="10"/>
                                <CheckBox x:Name="football" Margin="0 2 0 2" Content="Football" TabIndex="11"/>
                                <CheckBox x:Name="holidaying" Margin="0 2 0 2" Content="Holidaying" TabIndex="12"/>
                                <CheckBox x:Name="surfing" Margin="0 2 0 2" Content="Surfing" TabIndex="13"/>
                                <CheckBox x:Name="tv" Margin="0 2 0 2" Content="TV" TabIndex="14"/>
                            </StackPanel>
                        </liquidTreeView:FieldSet>
                    </StackPanel>
                </ScrollViewer>
